{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "es2020",
        "module": "commonjs",
        "removeComments": true,
        "inlineSourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "rootDirs": ["./src", "./test", "./scripts"],
        "skipLibCheck": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./node_modules/@types"],
        "strict": true,
        "importHelpers": true,
        "useDefineForClassFields": true,
        "lib": ["ES2022.Error"],
        "noImplicitOverride": false
    },
    "ts-node": {
        "files": true,
        "compilerOptions": {
            "module": "CommonJS"
        },
        "ignore": ["/node_modules/(?!@pendle/core-v2/typechain-types)"]
    },
    "include": ["src/**/*", "test/**/*", "scripts/**/*"]
}
