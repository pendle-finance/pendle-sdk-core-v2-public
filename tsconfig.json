{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "esnext",
        "module": "esnext",
        "removeComments": true,
        "inlineSourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "rootDirs": ["./src", "./test", "./scripts"],
        "skipLibCheck": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./node_modules/@types"],
        "strict": true
    },
    "ts-node": {
        "files": true,
        "compilerOptions": {
            "module": "CommonJS"
        },
        "ignore": [
            "/node_modules/(?!@pendle/core-v2/typechain-types)"
        ]
    },
    "include": ["src/**/*", "test/**/*", "scripts/**/*"]
}
